<%# Admin Analytics Dashboard - Executive View %>
<%# FDA 21 CFR Part 11 Compliant - All access logged %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <%# Header %>
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Subscription Analytics</h1>
        <p class="mt-1 text-sm text-gray-500">
          Last updated: <%= Time.current.strftime("%B %d, %Y %H:%M UTC") %>
        </p>
      </div>
      <div class="flex space-x-3">
        <a href="<%= admin_analytics_path(format: :json) %>"
           class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
          JSON API
        </a>
        <a href="<%= export_admin_analytics_path %>"
           class="px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700">
          Export CSV
        </a>
      </div>
    </div>

    <%# Alerts %>
    <% if @alerts&.any? %>
      <div class="mb-6 space-y-3">
        <% @alerts.each do |alert| %>
          <div class="rounded-md p-4 <%= alert[:severity] == 'critical' ? 'bg-red-50 border border-red-200' : (alert[:severity] == 'warning' ? 'bg-yellow-50 border border-yellow-200' : 'bg-blue-50 border border-blue-200') %>">
            <div class="flex">
              <div class="flex-shrink-0">
                <% if alert[:severity] == 'critical' %>
                  <span class="text-red-400 text-xl">‚ö†Ô∏è</span>
                <% elsif alert[:severity] == 'warning' %>
                  <span class="text-yellow-400 text-xl">‚ö°</span>
                <% else %>
                  <span class="text-blue-400 text-xl">‚ÑπÔ∏è</span>
                <% end %>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium <%= alert[:severity] == 'critical' ? 'text-red-800' : (alert[:severity] == 'warning' ? 'text-yellow-800' : 'text-blue-800') %>">
                  <%= alert[:title] %>
                </h3>
                <p class="mt-1 text-sm <%= alert[:severity] == 'critical' ? 'text-red-700' : (alert[:severity] == 'warning' ? 'text-yellow-700' : 'text-blue-700') %>">
                  <%= alert[:message] %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <%# Key Metrics Cards %>
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <%# MRR Card %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <span class="text-2xl">üí∞</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Monthly Revenue</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @mrr[:mrr_formatted] %></dd>
                <dd class="text-xs text-gray-500">ARR: <%= @mrr[:arr_formatted] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <a href="<%= mrr_admin_analytics_path %>" class="text-sm font-medium text-blue-600 hover:text-blue-500">
            View breakdown ‚Üí
          </a>
        </div>
      </div>

      <%# Active Tenants Card %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <span class="text-2xl">üë•</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Active Tenants</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @tenants[:active] %></dd>
                <dd class="text-xs text-gray-500">
                  <%= @tenants[:paying] %> paying ‚Ä¢ <%= @tenants[:trialing] %> trialing
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <a href="<%= tenants_admin_analytics_path %>" class="text-sm font-medium text-blue-600 hover:text-blue-500">
            View all tenants ‚Üí
          </a>
        </div>
      </div>

      <%# Churn Rate Card %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 <%= @churn[:churn_rate] > 5 ? 'bg-red-100' : 'bg-green-100' %> rounded-lg flex items-center justify-center">
                <span class="text-2xl"><%= @churn[:churn_rate] > 5 ? 'üìâ' : 'üìà' %></span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">30-Day Churn</dt>
                <dd class="text-2xl font-bold <%= @churn[:churn_rate] > 5 ? 'text-red-600' : 'text-gray-900' %>">
                  <%= @churn[:churn_rate_formatted] %>
                </dd>
                <dd class="text-xs text-gray-500">
                  Retention: <%= @churn[:retention_formatted] %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <a href="<%= churn_admin_analytics_path %>" class="text-sm font-medium text-blue-600 hover:text-blue-500">
            Churn analysis ‚Üí
          </a>
        </div>
      </div>

      <%# LTV Card %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <span class="text-2xl">üíé</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Customer LTV</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @ltv[:ltv_formatted] %></dd>
                <dd class="text-xs text-gray-500">
                  Avg lifespan: <%= @ltv[:avg_lifespan_months] %> months
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <span class="text-sm text-gray-500">Avg MRR: <%= @ltv[:avg_mrr_formatted] %></span>
        </div>
      </div>
    </div>

    <%# Two Column Layout %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%# MRR Breakdown %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">MRR by Plan</h2>
        </div>
        <div class="p-6">
          <table class="min-w-full">
            <thead>
              <tr>
                <th class="text-left text-xs font-medium text-gray-500 uppercase">Plan</th>
                <th class="text-right text-xs font-medium text-gray-500 uppercase">Tenants</th>
                <th class="text-right text-xs font-medium text-gray-500 uppercase">MRR</th>
                <th class="text-right text-xs font-medium text-gray-500 uppercase">%</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @mrr[:breakdown]&.each do |plan, data| %>
                <% next if data[:count] == 0 && data[:mrr_cents] == 0 %>
                <tr>
                  <td class="py-3 text-sm font-medium text-gray-900 capitalize"><%= plan %></td>
                  <td class="py-3 text-sm text-gray-500 text-right"><%= data[:count] %></td>
                  <td class="py-3 text-sm text-gray-900 text-right font-medium"><%= data[:mrr_formatted] %></td>
                  <td class="py-3 text-sm text-gray-500 text-right"><%= data[:percentage] %>%</td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr class="border-t-2 border-gray-300">
                <td class="py-3 text-sm font-bold text-gray-900">Total</td>
                <td class="py-3 text-sm text-gray-900 text-right font-bold"><%= @mrr[:active_subscriptions] %></td>
                <td class="py-3 text-sm text-gray-900 text-right font-bold"><%= @mrr[:mrr_formatted] %></td>
                <td class="py-3 text-sm text-gray-500 text-right">100%</td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>

      <%# At-Risk Tenants %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-medium text-gray-900">At-Risk Tenants</h2>
          <span class="px-2 py-1 text-xs font-medium rounded-full <%= @at_risk[:count] > 0 ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
            <%= @at_risk[:count] %> at risk
          </span>
        </div>
        <div class="p-6">
          <% if @at_risk[:tenants]&.any? %>
            <div class="mb-4 p-3 bg-red-50 rounded-lg">
              <p class="text-sm text-red-700">
                <strong><%= @at_risk[:mrr_at_risk_formatted] %></strong> MRR at risk
              </p>
            </div>
            <ul class="divide-y divide-gray-200">
              <% @at_risk[:tenants].first(5).each do |tenant| %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= tenant[:company_name] || tenant[:subdomain] %></p>
                      <p class="text-xs text-gray-500"><%= tenant[:plan] %> ‚Ä¢ <%= tenant[:reason] %></p>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium rounded-full
                      <%= tenant[:risk_level] == 'critical' ? 'bg-red-100 text-red-800' : (tenant[:risk_level] == 'high' ? 'bg-orange-100 text-orange-800' : 'bg-yellow-100 text-yellow-800') %>">
                      <%= tenant[:risk_level] %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
            <% if @at_risk[:tenants].count > 5 %>
              <p class="mt-3 text-sm text-gray-500">
                + <%= @at_risk[:tenants].count - 5 %> more
              </p>
            <% end %>
          <% else %>
            <p class="text-center text-gray-500 py-8">
              ‚úÖ No at-risk tenants detected
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <%# Tenant Status Distribution %>
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Tenant Distribution</h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
          <% @tenants[:by_status]&.each do |status, count| %>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-gray-900"><%= count %></p>
              <p class="text-sm text-gray-500 capitalize"><%= status.to_s.gsub('_', ' ') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Revenue Trend (Chart-Ready Data) %>
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">MRR Trend</h2>
        <p class="text-sm text-gray-500">
          Growth: <%= @trends.dig(:mrr_trend, :growth_formatted) %>
        </p>
      </div>
      <div class="p-6">
        <div class="flex items-end justify-between space-x-2 h-32">
          <% max_mrr = @trends.dig(:mrr_trend, :data)&.map { |d| d[:mrr_cents] }&.max || 1 %>
          <% @trends.dig(:mrr_trend, :data)&.each do |month| %>
            <div class="flex-1 flex flex-col items-center">
              <div class="w-full bg-blue-500 rounded-t"
                   style="height: <%= [(month[:mrr_cents].to_f / max_mrr * 100), 5].max %>%"
                   title="<%= month[:mrr_formatted] %>">
              </div>
              <p class="text-xs text-gray-500 mt-2"><%= month[:month_name].split(' ').first[0..2] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Footer %>
    <div class="mt-8 text-center text-sm text-gray-500">
      <p>FDA 21 CFR Part 11 Compliant ‚Ä¢ All access logged</p>
      <p>Data source: Tenant + Stripe + PaperTrail</p>
    </div>

  </div>
</div>

<%# Chart.js Integration (optional - include in layout) %>
<script>
  // MRR Trend data for Chart.js integration
  window.analyticsData = {
    mrr: <%= raw @mrr.to_json %>,
    churn: <%= raw @churn.to_json %>,
    tenants: <%= raw @tenants.to_json %>,
    trends: <%= raw @trends.to_json %>
  };
</script>
